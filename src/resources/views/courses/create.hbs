<div class="mt-4">
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên khoá học</label>
      <input class="form-control" type="text" id="name" name="name" />
    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      ></textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Video Id</label>
      <input class="form-control" type="text" id="videoId" name="videoId" />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input class="form-control" type="text" id="level" name="level" />
    </div>

    <button type="submit" class="btn btn-primary">Thêm khoá học</button>
  </form>
</div>