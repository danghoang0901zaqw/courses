<div class="mt-4">
  <h1>Cập nhật khoá học </h1>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khoá học</label>
      <input
        value="{{course.name}}"
        class="form-control"
        type="text"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label value="{{course.videoId}}" for="videoId">Video Id</label>
      <input class="form-control" type="text" id="videoId" name="videoId" />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        value="{{course.level}}"
        class="form-control"
        type="text"
        id="level"
        name="level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Sửa khoá học</button>
  </form>
</div>